<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>User Management Dashboard</title>
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  
  <!-- Icons -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  
  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    :root {
      --primary-color: #4f46e5;
      --primary-hover: #4338ca;
      --bg-color: #f3f4f6;
      --text-main: #111827;
      --text-muted: #6b7280;
      --card-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.05), 0 4px 6px -2px rgba(0, 0, 0, 0.025);
    }

    body {
      background-color: var(--bg-color);
      font-family: 'Inter', sans-serif;
      color: var(--text-main);
      min-height: 100vh;
    }

    /* Card Styling */
    .dashboard-card {
      background: white;
      border-radius: 16px;
      border: 1px solid rgba(229, 231, 235, 0.5);
      box-shadow: var(--card-shadow);
      overflow: hidden;
    }

    .card-header-custom {
      background: white;
      padding: 1.5rem 2rem;
      border-bottom: 1px solid #f3f4f6;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 1rem;
    }

    /* Table Styling */
    .custom-table {
      width: 100%;
      margin-bottom: 0;
      border-collapse: separate;
      border-spacing: 0;
    }

    .custom-table thead th {
      background: #f9fafb;
      font-weight: 600;
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      color: var(--text-muted);
      padding: 1rem 1.5rem;
      border-bottom: 1px solid #e5e7eb;
    }

    .custom-table tbody tr {
      transition: all 0.2s ease;
    }

    .custom-table tbody tr:hover {
      background-color: #f9fafb;
    }

    .custom-table td {
      padding: 1rem 1.5rem;
      vertical-align: middle;
      border-bottom: 1px solid #f3f4f6;
      font-size: 0.925rem;
    }

    .custom-table tbody tr:last-child td {
      border-bottom: none;
    }

    /* Profile Cell */
    .user-profile {
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .avatar-wrapper {
      position: relative;
      width: 48px;
      height: 48px;
      flex-shrink: 0;
    }

    .avatar-img {
      width: 100%;
      height: 100%;
      border-radius: 50%;
      object-fit: cover;
      border: 2px solid white;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .user-info h6 {
      margin: 0;
      font-weight: 600;
      color: var(--text-main);
    }

    .user-info small {
      color: var(--text-muted);
      font-size: 0.85rem;
    }

    /* Badges */
    .role-badge {
      padding: 0.35em 0.8em;
      border-radius: 20px;
      font-size: 0.75rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.025em;
    }

    .role-admin {
      background-color: #e0e7ff;
      color: #4338ca;
    }

    .role-user {
      background-color: #f3f4f6;
      color: #4b5563;
    }

    /* Action Buttons */
    .action-btn {
      width: 36px;
      height: 36px;
      border-radius: 8px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      border: none;
      transition: all 0.2s;
      margin-left: 0.25rem;
      background: transparent;
      color: var(--text-muted);
    }

    .action-btn:hover {
      background-color: #f3f4f6;
      color: var(--primary-color);
    }

    .action-btn.btn-delete:hover {
      background-color: #fee2e2;
      color: #ef4444;
    }

    /* Header Controls */
    .search-wrapper {
      position: relative;
      width: 100%;
      max-width: 360px;
    }

    .search-wrapper i {
      position: absolute;
      left: 1rem;
      top: 50%;
      transform: translateY(-50%);
      color: var(--text-muted);
      pointer-events: none;
      transition: opacity 0.15s ease, transform 0.15s ease;
    }

    .search-wrapper:focus-within i,
    .search-wrapper.has-text i {
      opacity: 0;
      transform: translate(-4px, -50%);
    }

    .search-input {
      padding-left: 2.75rem;
      min-height: 48px;
      border-radius: 10px;
      border: 1px solid #d1d5db;
      background: #fff;
      font-size: 0.95rem;
    }

    .search-input::placeholder {
      color: #9ca3af;
      font-weight: 500;
      transition: color 0.15s ease;
    }

    .search-wrapper:focus-within .search-input::placeholder {
      color: transparent;
    }
  </style>
</head>
<body>

  <%
    // Helper Variables setup
    const navUser = (typeof sessionUser !== 'undefined' && sessionUser) || 
                   (typeof loggedInUser !== 'undefined' && loggedInUser) || 
                   (typeof locals !== 'undefined' && locals.user) || 
                   null;

    // Ensure users array exists
    const safeUsers = (typeof users !== 'undefined' && users) ? users : [];
  %>

  <!-- Header Partial -->
  <%- include('partials/header', { user: navUser }) %>

  <main class="container pb-5 pt-5">
    
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-end mb-4">
      <div>
        <h2 class="fw-bold mb-1">Registered Users</h2>
        <p class="text-muted mb-0">Manage users, roles, and permissions.</p>
      </div>
    </div>

    <!-- Main Card -->
    <div class="dashboard-card">
      
      <!-- Card Tools (Search & Filter) -->
      <div class="card-header-custom">
        <div class="search-wrapper">
          <i class="fas fa-search"></i>
          <input type="text" id="userInputSearch" class="form-control search-input shadow-none" placeholder="">
        </div>
        
        <div class="d-flex gap-2">
          <select id="roleFilterSelect" class="form-select shadow-none" style="border-radius: 8px; border-color: #e5e7eb; font-size: 0.9rem;">
            <option value="all">All Roles</option>
            <option value="admin">Admin</option>
            <option value="user">User</option>
          </select>
        </div>
      </div>

      <!-- Table Wrapper -->
      <div class="table-responsive">
        <table class="custom-table align-middle" id="userTable">
          <thead>
            <tr>
              <th scope="col">User</th>
              <th scope="col">Role</th>
              <th scope="col">Contact</th>
              <th scope="col">Address</th>
              <th scope="col" class="text-end">Actions</th>
            </tr>
          </thead>
          
          <tbody>
            <% if (safeUsers.length > 0) { %>
              <% safeUsers.forEach(function(u) { %>
              <%
                const rawAvatar = u.profileImage || u.profile_image || u.avatar || u.imagePath || '';
                const avatarFile = rawAvatar.replace(/\\/g, '/').split('/').pop();
                const avatar = /^https?:\/\//i.test(rawAvatar)
                  ? rawAvatar
                  : avatarFile
                    ? `/images/${avatarFile}`
                    : '/images/placeholder.png';

                const roleClass = u.role === 'admin' ? 'role-admin' : 'role-user';
                const isSelf = navUser && navUser.id === u.id;
                const targetIsAdmin = u.role === 'admin';
              %>

                <tr class="user-row" data-role="<%= u.role %>">
                  <!-- User Profile -->
                  <td class="user-name-cell">
                    <div class="user-profile">
                      <div class="avatar-wrapper">
                        <!-- Updated Image Tag with Date.now() cache busting -->
                        <img src="<%= avatar %>?t=<%= Date.now() %>" alt="<%= u.username %>" class="avatar-img" onerror="this.onerror=null;this.src='https://ui-avatars.com/api/?name=<%= u.username %>&background=random&color=fff'">
                      </div>
                      <div class="user-info">
                        <h6 class="searchable-name"><%= u.username %></h6>
                        <small class="searchable-email"><%= u.email %></small>
                      </div>
                    </div>
                  </td>

                  <!-- Role -->
                  <td>
                    <span class="role-badge <%= roleClass %>">
                      <%= u.role %>
                    </span>
                  </td>

                  <!-- Contact -->
                  <td>
                    <span class="text-muted small"><%= u.contact || '-' %></span>
                  </td>

                  <!-- Address -->
                  <td>
                     <span class="text-muted small"><%= u.address || 'N/A' %></span>
                  </td>

                  <!-- Actions -->
                  <td class="text-end">
                    <a href="/admin/users/<%= u.id %>/edit" class="action-btn" title="Edit">
                      <i class="far fa-edit"></i>
                    </a>
                    
                    <% if (!isSelf) { %>
                      <% if (targetIsAdmin) { %>
                        <button class="action-btn btn-delete" title="Cannot delete other admins" disabled style="opacity:0.3; cursor:not-allowed;">
                          <i class="far fa-trash-alt"></i>
                        </button>
                      <% } else { %>
                        <form action="/admin/users/<%= u.id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete <%= u.username %>?');">
                          <button type="submit" class="action-btn btn-delete" title="Delete User">
                            <i class="far fa-trash-alt"></i>
                          </button>
                        </form>
                      <% } %>
                    <% } %>
                  </td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr id="noUsersRow">
                <td colspan="5" class="text-center py-4 text-muted">
                  No users found.
                </td>
              </tr>
            <% } %>
            
            <tr id="noResultsMessage" style="display: none;">
                <td colspan="5" class="text-center py-4 text-muted">
                  No matching users found.
                </td>
            </tr>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <div class="p-4 border-top d-flex justify-content-between align-items-center">
        <span class="text-muted small">Showing entries</span>
        <nav>
          <ul class="pagination pagination-sm mb-0">
            <li class="page-item disabled"><a class="page-link border-0 text-muted bg-transparent" href="#">Previous</a></li>
            <li class="page-item active"><a class="page-link border-0 rounded-3" href="#">1</a></li>
            <li class="page-item"><a class="page-link border-0 text-muted bg-transparent" href="#">Next</a></li>
          </ul>
        </nav>
      </div>
    </div>

  </main>

  <!-- Footer Partial -->
  <%- include('partials/footer') %>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Client-Side Search and Filter Script -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const searchInput = document.getElementById('userInputSearch');
      const roleFilter = document.getElementById('roleFilterSelect');
      const tableRows = document.querySelectorAll('.user-row');
      const noResultsMsg = document.getElementById('noResultsMessage');
      const searchWrapper = document.querySelector('.search-wrapper');

      const updateSearchState = () => {
        if (!searchWrapper) return;
        searchWrapper.classList.toggle('has-text', searchInput.value.trim().length > 0);
      };

      function filterUsers() {
        const searchTerm = searchInput.value.toLowerCase().trim();
        const selectedRole = roleFilter.value.toLowerCase();
        let visibleCount = 0;

        tableRows.forEach(row => {
          const userName = row.querySelector('.searchable-name').textContent.toLowerCase();
          const userEmail = row.querySelector('.searchable-email').textContent.toLowerCase();
          const userRole = row.getAttribute('data-role').toLowerCase();

          // Check Role
          const roleMatch = (selectedRole === 'all') || (userRole === selectedRole);

          // Check Search Term
          const searchMatch = userName.includes(searchTerm) || userEmail.includes(searchTerm);

          if (roleMatch && searchMatch) {
            row.style.display = '';
            visibleCount++;
          } else {
            row.style.display = 'none';
          }
        });

        // Toggle "No matching users" message
        if (visibleCount === 0 && tableRows.length > 0) {
            noResultsMsg.style.display = '';
        } else {
            noResultsMsg.style.display = 'none';
        }
      }

      // Initial state update
      updateSearchState();

      // Event Listeners
      searchInput.addEventListener('input', () => { updateSearchState(); filterUsers(); });
      roleFilter.addEventListener('change', filterUsers);
    });
  </script>
</body>
</html>