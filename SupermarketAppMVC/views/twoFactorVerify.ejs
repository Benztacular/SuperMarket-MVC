<%- include('partials/header') %>

<style>
  :root {
    /* FreshMart Theme Colors based on your index */
    --fm-green: #00b25a;
    --fm-green-dark: #008f48;
    --fm-bg-start: #f0fdf4; /* Light mint */
    --fm-bg-end: #ffffff;
    --text-dark: #1f2937;
    --text-light: #6b7280;
    --error-red: #ef4444;
  }

  /* Page Layout with FreshMart Gradient */
  .auth-wrapper {
    min-height: 85vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--fm-bg-start) 0%, var(--fm-bg-end) 100%);
    padding: 20px;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  }

  /* Card Styling - Clean & Rounded */
  .auth-card {
    background: #ffffff;
    padding: 3rem 2rem;
    border-radius: 16px;
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.05), 0 8px 10px -6px rgba(0, 0, 0, 0.01);
    width: 100%;
    max-width: 420px;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  /* Decorative top bar */
  .auth-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 6px;
    background: var(--fm-green);
  }

  /* Icon Container */
  .icon-circle {
    width: 64px;
    height: 64px;
    background-color: #ecfdf5; /* Very light green */
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem auto;
    color: var(--fm-green);
  }

  .icon-circle svg {
    width: 32px;
    height: 32px;
  }

  /* Typography */
  .auth-header h1 {
    color: var(--text-dark);
    margin: 0 0 0.5rem 0;
    font-size: 1.75rem;
    font-weight: 800;
    letter-spacing: -0.025em;
  }

  .auth-subtitle {
    color: var(--text-light);
    font-size: 0.95rem;
    margin-bottom: 2rem;
    line-height: 1.5;
  }

  /* Error Message */
  .error-message {
    color: var(--error-red);
    font-size: 0.875rem;
    margin-bottom: 1rem;
    background: #fef2f2;
    padding: 0.5rem;
    border-radius: 6px;
    display: inline-block;
  }

  /* Form Elements */
  .form-group {
    margin-bottom: 2rem;
    position: relative;
  }

  /* The Input Field - Styled to look like the reference */
  .code-input {
    width: 100%;
    padding: 1rem;
    border: 2px solid #e5e7eb;
    border-radius: 12px;
    font-size: 2rem;
    font-weight: 700;
    text-align: center;
    letter-spacing: 0.5em; /* Creates the "spaced out" numbers look */
    font-family: monospace;
    color: var(--text-dark);
    background: #f9fafb;
    transition: all 0.2s ease;
    outline: none;
    box-shadow: inset 0 2px 4px rgba(0,0,0,0.02);
  }

  .code-input::placeholder {
    color: #d1d5db;
    letter-spacing: 0.5em;
    font-weight: 400;
  }

  .code-input:focus {
    border-color: var(--fm-green);
    background: #fff;
    box-shadow: 0 0 0 4px rgba(0, 178, 90, 0.1);
  }

  /* Shake Animation for Errors */
  .shake-element {
    animation: shake 0.5s cubic-bezier(.36,.07,.19,.97) both;
    border-color: var(--error-red) !important;
    color: var(--error-red);
    background: #fff5f5;
  }

  @keyframes shake {
    10%, 90% { transform: translate3d(-1px, 0, 0); }
    20%, 80% { transform: translate3d(2px, 0, 0); }
    30%, 50%, 70% { transform: translate3d(-4px, 0, 0); }
    40%, 60% { transform: translate3d(4px, 0, 0); }
  }

  /* Button */
  .btn-submit {
    width: 100%;
    background-color: var(--fm-green);
    color: white;
    padding: 1rem;
    border: none;
    border-radius: 50px; /* Pill shape like FreshMart */
    font-size: 1rem;
    font-weight: 700;
    cursor: pointer;
    transition: transform 0.1s, background-color 0.2s, box-shadow 0.2s;
    box-shadow: 0 4px 6px -1px rgba(0, 178, 90, 0.3);
  }

  .btn-submit:hover {
    background-color: var(--fm-green-dark);
    transform: translateY(-1px);
    box-shadow: 0 6px 8px -1px rgba(0, 178, 90, 0.4);
  }

  .btn-submit:active {
    transform: translateY(0);
  }

  /* Cancel Link */
  .cancel-link {
    display: inline-block;
    margin-top: 1.5rem;
    color: var(--text-light);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    transition: color 0.2s;
  }

  .cancel-link:hover {
    color: var(--text-dark);
  }
</style>

<div class="auth-wrapper">
  <div class="auth-card">
    <!-- Lock Icon -->
    <div class="icon-circle">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
        <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
      </svg>
    </div>

    <div class="auth-header">
      <h1>Verify Identity</h1>
      <p class="auth-subtitle">
        Enter the 6-digit code from your authentication app to secure your account.
      </p>
    </div>

    <% if (errors && errors.length) { %>
      <div class="error-message">
        <%= errors.join(', ') %>
      </div>
    <% } %>

    <form method="post" action="/2fa/verify-login">
      <div class="form-group">
        <!-- added 'shake-element' class conditionally if errors exist -->
        <input 
          id="code"
          name="code" 
          type="text" 
          inputmode="numeric" 
          autocomplete="one-time-code" 
          maxlength="6" 
          placeholder="000000"
          class="code-input <%= (errors && errors.length) ? 'shake-element' : '' %>"
          required
          autofocus
        />
      </div>
      <button type="submit" class="btn-submit">Confirm Code</button>
    </form>

    <a href="/login" class="cancel-link">Cancel Verification</a>
  </div>
</div>

<%- include('partials/footer') %>