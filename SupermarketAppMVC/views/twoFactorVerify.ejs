<!doctype html>
<html>
<head><meta charset="utf-8"><title>2FA Verify</title></head>
<body>
  <h1>Two-factor authentication</h1>
  <% if (errors && errors.length) { %>
    <div style="color:red"><%= errors.join(', ') %></div>
  <% } %>
  <form method="post" action="/2fa/verify-login">
    <label>Enter 2FA code</label>
    <input name="code" type="text" inputmode="numeric" autocomplete="one-time-code" maxlength="6" />
    <button type="submit">Verify</button>
  </form>
  <p><a href="/login">Cancel</a></p>
</body>
</html>