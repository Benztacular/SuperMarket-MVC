<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Edit User</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    html, body { height: 100%; }
    body {
      background: #f5f7fa;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }
    main.page-body {
      flex: 1 0 auto;
      padding-bottom: 40px;
    }
    .edit-wrapper {
      max-width: 750px;
      margin: 40px auto;
      background: #fff;
      padding: 30px;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0,0,0,0.05);
      border: 1px solid #e6e9ef;
    }
    h3 { font-weight: 600; }
    .btn-back {
      background: #6c757d;
      color: white;
    }
    .btn-back:hover {
      background: #5a6268;
      color: white;
    }
  </style>
</head>

<body>

  <%
    // --- USER OBJECTS PASSED FROM CONTROLLER ---
    const editUser = (typeof targetUser !== 'undefined' && targetUser) || {};
    const navUser =
      (typeof loggedInUser !== 'undefined' && loggedInUser) ||
      (typeof sessionUser !== 'undefined' && sessionUser) ||
      null;

    const isAdmin = navUser?.role === 'admin';
    const roleLocked = editUser.role === 'admin';
  %>

  <!-- HEADER -->
  <%- include('partials/header', { user: navUser, isAdmin }) %>

  <main class="page-body">
    <div class="edit-wrapper">

      <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="m-0">Edit User</h3>
        <a class="btn btn-back btn-sm" href="/admin/users">Back</a>
      </div>

      <form method="post" action="/admin/users/<%= editUser.id %>/edit" id="editUserForm">

        <div class="mb-3">
          <label class="form-label">Username</label>
          <input class="form-control" name="username" value="<%= editUser.username || '' %>" required>
        </div>

        <div class="mb-3">
          <label class="form-label">Email</label>
          <input class="form-control" type="email" name="email" value="<%= editUser.email || '' %>" required>
        </div>

        <div class="row g-3">
          <div class="col-md-6">
            <label class="form-label">Address</label>
            <input class="form-control" name="address" value="<%= editUser.address || '' %>">
          </div>

          <div class="col-md-6">
            <label class="form-label">Contact</label>
            <input class="form-control" name="contact" value="<%= editUser.contact || '' %>">
          </div>
        </div>

        <div class="mb-3 mt-3">
          <label class="form-label">Role</label>
          <select class="form-select" name="role" <%= roleLocked ? 'disabled' : '' %>>
            <option value="user" <%= editUser.role === 'user' ? 'selected' : '' %>>user</option>
            <option value="admin" <%= editUser.role === 'admin' ? 'selected' : '' %>>admin</option>
          </select>

          <% if (roleLocked) { %>
            <input type="hidden" name="role" value="<%= editUser.role %>">
          <% } %>
        </div>

        <button class="btn btn-primary mt-3">Save</button>

      </form>
    </div>
  </main>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- CHANGE TRACKING -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const form = document.getElementById('editUserForm');
      if (!form) return;

      const initialData = {
        username: "<%= editUser.username || '' %>",
        email: "<%= editUser.email || '' %>",
        address: "<%= editUser.address || '' %>",
        contact: "<%= editUser.contact || '' %>",
        role: "<%= editUser.role || 'user' %>"
      };

      form.addEventListener('submit', () => {
        const fd = new FormData(form);
        const changes = [];

        Object.entries(initialData).forEach(([key, original]) => {
          const nextValue = fd.get(key);
          if ((original ?? "") !== (nextValue ?? "")) {
            changes.push({ key, from: original || "(empty)", to: nextValue || "(empty)" });
          }
        });

        if (changes.length) {
          sessionStorage.setItem("editUserFeedback", JSON.stringify(changes));
        } else {
          sessionStorage.removeItem("editUserFeedback");
        }
      });

      const stored = sessionStorage.getItem("editUserFeedback");
      if (!stored) return;

      sessionStorage.removeItem("editUserFeedback");
      const changes = JSON.parse(stored);
      if (!changes.length) return;

      const labels = {
        username: "Username",
        email: "Email",
        address: "Address",
        contact: "Contact",
        role: "Role"
      };

      const alert = document.createElement("div");
      alert.className = "alert alert-success alert-dismissible fade show shadow-sm mb-4";
      alert.innerHTML = `
        <strong>User updated successfully.</strong>
        <ul class="mt-2 mb-0 ps-3">
          ${changes.map(c => `<li><b>${labels[c.key] || c.key}:</b> ${c.from} â†’ ${c.to}</li>`).join("")}
        </ul>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      `;

      const wrapper = document.querySelector(".edit-wrapper");
      if (wrapper) wrapper.prepend(alert);
    });
  </script>

</body>
</html>
