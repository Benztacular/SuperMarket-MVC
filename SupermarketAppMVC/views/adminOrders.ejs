<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Admin Orders | Dashboard</title>
  
  <!-- Fonts & Icons -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

  <style>
    :root {
      --primary-color: #4f46e5;
      --primary-hover: #4338ca;
      --bg-body: #f3f4f6;
      --text-main: #111827;
      --text-muted: #6b7280;
      --border-color: #e5e7eb;
      --card-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
    }

    body {
      font-family: 'Inter', sans-serif;
      background-color: var(--bg-body);
      color: var(--text-main);
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    /* --- Layout --- */
    .main-content {
      flex: 1;
      padding: 2rem 0;
      width: 100%;
    }

    .container-custom {
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 1.5rem;
    }

    /* --- Cards --- */
    .stat-card {
      background: white;
      border: 1px solid var(--border-color);
      border-radius: 12px;
      padding: 1.5rem;
      transition: all 0.2s;
    }
    .stat-card:hover {
      box-shadow: var(--card-shadow);
      transform: translateY(-2px);
    }
    .stat-icon {
      width: 48px;
      height: 48px;
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.25rem;
    }

    /* --- Table & Filters --- */
    .orders-panel {
      background: white;
      border-radius: 16px;
      border: 1px solid var(--border-color);
      box-shadow: var(--card-shadow);
      overflow: hidden;
      margin-top: 2rem;
    }

    .panel-header {
      padding: 1.5rem;
      border-bottom: 1px solid var(--border-color);
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
      justify-content: space-between;
      align-items: center;
      background: #fff;
    }

    .status-tabs {
      display: flex;
      gap: 0.5rem;
      overflow-x: auto;
      padding-bottom: 0.5rem;
    }
    
    .status-tab {
      padding: 0.5rem 1rem;
      border-radius: 999px;
      font-size: 0.875rem;
      font-weight: 500;
      color: var(--text-muted);
      cursor: pointer;
      white-space: nowrap;
      transition: all 0.2s;
      border: 1px solid transparent;
    }
    
    .status-tab.active {
      background-color: #eef2ff;
      color: var(--primary-color);
      border-color: #e0e7ff;
    }
    .status-tab:hover:not(.active) {
      background-color: #f9fafb;
    }

    .custom-table {
      width: 100%;
      margin-bottom: 0;
    }
    
    .custom-table th {
      background: #f9fafb;
      font-weight: 600;
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      color: var(--text-muted);
      padding: 1rem 1.5rem;
      border-bottom: 1px solid var(--border-color);
    }

    .custom-table td {
      padding: 1rem 1.5rem;
      vertical-align: middle;
      border-bottom: 1px solid var(--border-color);
      font-size: 0.9rem;
      color: #374151;
    }

    .custom-table tr:last-child td { border-bottom: none; }
    .custom-table tbody tr { transition: background 0.15s; }
    .custom-table tbody tr:hover { background: #f9fafb; }

    /* --- Badges & Buttons --- */
    .status-badge {
      padding: 0.25rem 0.75rem;
      border-radius: 999px;
      font-size: 0.75rem;
      font-weight: 600;
      display: inline-flex;
      align-items: center;
      gap: 0.35rem;
    }
    
    .status-badge::before {
      content: '';
      width: 6px;
      height: 6px;
      border-radius: 50%;
      background-color: currentColor;
    }

    .status-pending { background: #fff7ed; color: #c2410c; }
    .status-processing { background: #eff6ff; color: #1d4ed8; }
    .status-shipped { background: #f0fdf4; color: #15803d; }
    .status-delivered { background: #f0fdf4; color: #15803d; }
    .status-cancelled { background: #fef2f2; color: #b91c1c; }

    .status-select-wrapper {
      position: relative;
      width: 130px;
    }
    
    .status-select {
      appearance: none;
      width: 100%;
      padding: 0.35rem 2rem 0.35rem 0.75rem;
      font-size: 0.85rem;
      border: 1px solid var(--border-color);
      border-radius: 6px;
      background-color: white;
      color: #374151;
      cursor: pointer;
    }
    
    .status-select:focus {
      outline: none;
      border-color: var(--primary-color);
      box-shadow: 0 0 0 2px rgba(79, 70, 229, 0.1);
    }

    .btn-update {
      padding: 0.35rem 0.75rem;
      font-size: 0.85rem;
      background: var(--primary-color);
      color: white;
      border: none;
      border-radius: 6px;
      transition: opacity 0.2s;
    }
    .btn-update:hover { opacity: 0.9; }

    .btn-details {
      padding: 0.4rem 1rem;
      font-size: 0.8rem;
      font-weight: 500;
      border-radius: 6px;
      background-color: white;
      color: var(--primary-color);
      border: 1px solid #e0e7ff;
      transition: all 0.2s;
      text-decoration: none;
    }
    .btn-details:hover {
      background-color: #eef2ff;
      color: var(--primary-hover);
      border-color: var(--primary-color);
    }

    .chart-container {
      position: relative; 
      height: 300px; 
      width: 100%;
    }
  </style>
</head>
<body>

  <%- include('partials/header') %>

  <!-- Main Content -->
  <main class="main-content">
    <div class="container-custom">
      
      <!-- Top Header -->
      <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
          <h2 class="fw-bold mb-1">Order Management</h2>
          <p class="text-muted mb-0">Manage and track all customer orders.</p>
        </div>
      </div>

      <!-- Stats Cards (Calculated dynamically via JS below) -->
      <div class="row g-4 mb-5">
        <div class="col-md-3">
          <div class="stat-card">
            <div class="d-flex justify-content-between mb-3">
              <div class="stat-icon bg-indigo-50 text-primary" style="background:#eef2ff;">
                <i class="bi bi-currency-dollar"></i>
              </div>
            </div>
            <h3 class="fw-bold mb-0" id="statsTotalRevenue">$0.00</h3>
            <div class="text-muted small">Total Revenue</div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="stat-card">
            <div class="d-flex justify-content-between mb-3">
              <div class="stat-icon" style="background:#fff7ed; color:#c2410c;">
                <i class="bi bi-cart"></i>
              </div>
            </div>
            <h3 class="fw-bold mb-0" id="statsTotalOrders">0</h3>
            <div class="text-muted small">Total Orders</div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="stat-card">
            <div class="d-flex justify-content-between mb-3">
              <div class="stat-icon" style="background:#ecfdf5; color:#047857;">
                <i class="bi bi-check-lg"></i>
              </div>
            </div>
            <h3 class="fw-bold mb-0" id="statsCompleted">0</h3>
            <div class="text-muted small">Completed / Delivered</div>
          </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
              <div class="d-flex justify-content-between mb-3">
                <div class="stat-icon" style="background:#fff1f2; color:#be123c;">
                  <i class="bi bi-arrow-counterclockwise"></i>
                </div>
              </div>
              <h3 class="fw-bold mb-0" id="statsCancelled">0</h3>
              <div class="text-muted small">Cancelled / Refunded</div>
            </div>
          </div>
      </div>

      <!-- Chart Section -->
      <div class="card border-0 shadow-sm mb-5">
        <div class="card-body p-4">
            <h5 class="fw-bold mb-4">Orders Over Time</h5>
            <div class="chart-container">
                <canvas id="ordersChart"></canvas>
            </div>
        </div>
      </div>

      <!-- Orders Table Panel -->
      <div class="orders-panel">
        
        <!-- Filter Header -->
        <div class="panel-header">
            <div class="status-tabs" id="statusTabs">
                <div class="status-tab active" onclick="filterTable('all')">All Orders</div>
                <div class="status-tab" onclick="filterTable('Pending')">Pending</div>
                <div class="status-tab" onclick="filterTable('Processing')">Processing</div>
                <div class="status-tab" onclick="filterTable('Shipped')">Shipped</div>
                <div class="status-tab" onclick="filterTable('Delivered')">Delivered</div>
                <div class="status-tab" onclick="filterTable('Cancelled')">Cancelled</div>
            </div>
            
            <div class="input-group" style="max-width: 300px;">
                <span class="input-group-text bg-white border-end-0"><i class="bi bi-search"></i></span>
                <input type="text" id="searchInput" class="form-control border-start-0 ps-0" placeholder="Search order ID or customer...">
            </div>
        </div>

        <div class="table-responsive">
          <table class="table custom-table">
            <thead>
              <tr>
                <th scope="col" width="50"><input type="checkbox" class="form-check-input"></th>
                <th scope="col">Order ID</th>
                <th scope="col">Date</th>
                <th scope="col">Customer Name</th>
                <th scope="col">Status</th>
                <th scope="col">Total</th>
                <th scope="col">Update Status</th>
                <th scope="col" class="text-end">Actions</th>
              </tr>
            </thead>
            <tbody id="ordersTableBody">
              <% if (typeof orders !== 'undefined' && orders && orders.length > 0) { %>
                <% orders.forEach(function (o) { 
                    // Helper logic for badges
                    let badgeClass = 'bg-light text-dark';
                    const s = (o.status || 'Pending').trim(); 
                    const sLower = s.toLowerCase();
                    
                    if(sLower === 'pending') badgeClass = 'status-pending';
                    else if(sLower === 'processing') badgeClass = 'status-processing';
                    else if(sLower === 'shipped') badgeClass = 'status-shipped';
                    else if(sLower === 'delivered') badgeClass = 'status-delivered';
                    else if(sLower === 'cancelled') badgeClass = 'status-cancelled';
                %>
                  <!-- ADDED data-status attribute for JS filtering -->
                  <tr class="order-row" data-status="<%= s %>">
                    <td><input type="checkbox" class="form-check-input"></td>
                    <td class="fw-medium">#<%= o.orderId || o.id %></td>
                    <td class="text-muted"><%= o.createdAt ? (new Date(o.createdAt)).toLocaleDateString() : '-' %></td>
                    <td>
                        <div class="d-flex align-items-center">
                            <div class="bg-light rounded-circle d-flex align-items-center justify-content-center text-primary fw-bold me-2" style="width:32px; height:32px; font-size:12px;">
                                <%= (o.username || ('U' + (o.user_id || o.userId))).charAt(0).toUpperCase() %>
                            </div>
                            <div>
                                <div class="text-dark fw-medium" style="font-size:0.9rem;">
                                    #<%= o.user_id || o.userId %> â€“ <%= o.username || ('User #' + (o.user_id || o.userId)) %>
                                </div>
                                <div class="text-muted small" style="font-size:0.75rem;">
                                    <%= o.email || '' %>
                                </div>
                            </div>
                        </div>
                    </td>
                    <td>
                        <span class="status-badge <%= badgeClass %>">
                            <%= s %>
                        </span>
                    </td>
                    <td class="fw-semibold">
                        $<%= (o.totalAmount != null) ? Number(o.totalAmount).toFixed(2) : '0.00' %>
                    </td>
                    <td>
                        <form action="/admin/orders/<%= o.orderId || o.id %>/status" method="POST" class="d-flex align-items-center gap-2">
                            <div class="status-select-wrapper">
                                <select name="status" class="status-select">
                                    <% const opts = ['Pending','Processing','Shipped','Delivered','Cancelled']; %>
                                    <% opts.forEach(function(opt){ %>
                                        <option value="<%= opt %>" <%= (s === opt ? 'selected' : '') %>><%= opt %></option>
                                    <% }) %>
                                </select>
                                <i class="bi bi-chevron-down position-absolute top-50 end-0 translate-middle-y me-2 text-muted" style="font-size: 0.75rem; pointer-events: none;"></i>
                            </div>
                            <button type="submit" class="btn-update">Save</button>
                        </form>
                    </td>
                    <td class="text-end">
                        <a href="/admin/orders/<%= o.orderId || o.id %>" class="btn-details">
                            View Details
                        </a>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                    <td colspan="8" class="text-center py-5 text-muted">
                        <i class="bi bi-inbox fs-2 d-block mb-2"></i>
                        No orders found.
                    </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
        
        <!-- Pagination (Static Mockup) -->
        <div class="d-flex justify-content-between align-items-center p-3 border-top">
            <span class="text-muted small">Showing results</span>
            <nav>
                <ul class="pagination pagination-sm mb-0">
                    <li class="page-item disabled"><a class="page-link" href="#">Prev</a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </nav>
        </div>
      </div>
    </div>
  </main>

  <%- include('partials/footer') %>

  <!-- Data Injection for Charts -->
  <script id="orders-data-json" type="application/json">
    <%- (typeof orders !== 'undefined' && orders) ? JSON.stringify(orders) : '[]' %>
  </script>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <script>
    // --- 1. DATA PARSING ---
    let ordersData = [];
    try {
        const jsonContent = document.getElementById('orders-data-json').textContent;
        if (jsonContent && jsonContent.trim().length > 0) {
             ordersData = JSON.parse(jsonContent);
        }
    } catch (e) {
        console.warn('Could not parse orders data:', e);
    }

    // --- 2. FILTERING LOGIC ---
    function filterTable(status) {
        // 1. Update Tab UI
        const tabs = document.querySelectorAll('.status-tab');
        tabs.forEach(t => t.classList.remove('active'));
        // Find the tab that was clicked (using event target logic or simple loop)
        for (let t of tabs) {
            if (t.innerText.toLowerCase().includes(status.toLowerCase()) || (status === 'all' && t.innerText === 'All Orders')) {
                t.classList.add('active');
            }
        }

        // 2. Filter Table Rows
        const rows = document.querySelectorAll('.order-row');
        rows.forEach(row => {
            const rowStatus = row.getAttribute('data-status');
            if (status === 'all' || rowStatus === status) {
                row.style.display = ''; // Show
            } else {
                row.style.display = 'none'; // Hide
            }
        });
    }

    // Search Logic (Simple Text Filter)
    document.getElementById('searchInput').addEventListener('keyup', function(e) {
        const term = e.target.value.toLowerCase();
        const rows = document.querySelectorAll('.order-row');
        
        rows.forEach(row => {
            const textContent = row.innerText.toLowerCase();
            if (textContent.includes(term)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });

    // --- 3. STATS CALCULATION ---
    function calculateStats() {
        let totalRevenue = 0;
        let completedCount = 0;
        let cancelledCount = 0;

        ordersData.forEach(o => {
            const amount = parseFloat(o.totalAmount || 0);
            const status = (o.status || '').toLowerCase();

            if (status !== 'cancelled') {
                totalRevenue += amount;
            }
            if (status === 'delivered' || status === 'completed') {
                completedCount++;
            } else if (status === 'cancelled') {
                cancelledCount++;
            }
        });

        // Update DOM
        const elRev = document.getElementById('statsTotalRevenue');
        const elOrd = document.getElementById('statsTotalOrders');
        const elComp = document.getElementById('statsCompleted');
        const elCanc = document.getElementById('statsCancelled');

        if(elRev) elRev.textContent = '$' + totalRevenue.toLocaleString(undefined, {minimumFractionDigits: 2, maximumFractionDigits: 2});
        if(elOrd) elOrd.textContent = ordersData.length;
        if(elComp) elComp.textContent = completedCount;
        if(elCanc) elCanc.textContent = cancelledCount;
    }

    // --- 4. CHART GENERATION LOGIC ---
    function initChart() {
        if (!document.getElementById('ordersChart')) return;
        
        // Step A: Prepare a bucket to hold "Date" -> "Number of Orders"
        const ordersByDate = {};
        
        // Step B: Loop through all actual orders (ordersData)
        ordersData.forEach(o => {
            if (!o.createdAt) return;
            // Convert SQL timestamp to a Date Object
            const dateObj = new Date(o.createdAt);
            // Format it to be short (e.g., "Dec 3")
            const dateKey = dateObj.toLocaleDateString('en-US', { month: 'short', day: 'numeric' }); 
            
            // Increment the counter for this specific date
            // If it exists, add 1. If not, set it to 1.
            ordersByDate[dateKey] = (ordersByDate[dateKey] || 0) + 1;
        });

        // Step C: Split the bucket into Labels (X-axis) and Data Points (Y-axis)
        const labels = Object.keys(ordersByDate); 
        const dataPoints = Object.values(ordersByDate);

        // Step D: Draw the Chart
        const ctx = document.getElementById('ordersChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels.length > 0 ? labels : ['No Data'],
                datasets: [{
                    label: 'Orders',
                    data: dataPoints.length > 0 ? dataPoints : [0],
                    borderColor: '#4f46e5',
                    backgroundColor: 'rgba(79, 70, 229, 0.1)',
                    borderWidth: 2,
                    tension: 0.4,
                    fill: true,
                    pointBackgroundColor: '#ffffff',
                    pointBorderColor: '#4f46e5',
                    pointRadius: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: { borderDash: [5, 5], color: '#f3f4f6' },
                        ticks: { padding: 10, stepSize: 1 }
                    },
                    x: { grid: { display: false } }
                }
            }
        });
    }

    document.addEventListener('DOMContentLoaded', () => {
        calculateStats();
        initChart();
    });
  </script>
</body>
</html>