<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;800&display=swap" rel="stylesheet">

<style>
  :root {
    --brand-green: #00dc82; /* Vibrant neon green */
    --brand-dark: #0f172a;
    --brand-dark-glass: rgba(15, 23, 42, 0.95); /* High opacity glass */
    --nav-height: 80px;
    --glow: 0 0 20px rgba(0, 220, 130, 0.4);
  }

  body {
    /* Font update only - Background color removed so your wallpaper shows */
    font-family: 'Outfit', sans-serif;
  }

  /* --- Navbar Base --- */
  .app-navbar {
    position: fixed;
    top: 0; left: 0; right: 0;
    height: var(--nav-height);
    z-index: 1030;
    background: var(--brand-dark-glass);
    backdrop-filter: blur(12px) saturate(180%);
    -webkit-backdrop-filter: blur(12px) saturate(180%);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
  }

  .navbar-container {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 1.5rem;
    height: 100%;
    display: flex;
    align-items: center;
  }

  /* --- Brand Identity --- */
  .navbar-brand {
    display: flex;
    align-items: center;
    gap: 12px;
    text-decoration: none;
  }

  .brand-logo-box {
    width: 42px; height: 42px;
    background: linear-gradient(135deg, var(--brand-green), #059669);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: var(--glow);
    font-size: 1.2rem;
    color: #fff;
    transform: rotate(-5deg);
    transition: transform 0.3s ease;
  }

  .navbar-brand:hover .brand-logo-box {
    transform: rotate(0deg) scale(1.05);
  }

  .brand-text-wrap {
    display: flex;
    flex-direction: column;
    line-height: 1;
  }

  .brand-title {
    font-weight: 800;
    font-size: 1.35rem;
    color: #fff;
    letter-spacing: -0.5px;
  }

  .brand-subtitle {
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 2px;
    background: linear-gradient(90deg, var(--brand-green), #fff);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  /* --- Navigation Links --- */
  .nav-item { margin: 0 4px; }

  .nav-link {
    color: #94a3b8 !important;
    font-weight: 500;
    padding: 10px 18px !important;
    border-radius: 50px;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .nav-link:hover, .nav-link:focus, .nav-link.active {
    color: #fff !important;
    background: rgba(255, 255, 255, 0.08);
    transform: translateY(-1px);
  }

  /* --- Cart Specifics --- */
  .cart-icon svg {
    transition: transform 0.2s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }
  
  .nav-link:hover .cart-icon svg {
    transform: scale(1.2);
  }

  .badge-cart {
    background: #ef4444;
    color: white;
    font-size: 0.75rem;
    padding: 4px 8px;
    border-radius: 12px;
    box-shadow: 0 2px 10px rgba(239, 68, 68, 0.5);
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0% { box-shadow: 0 0 0 0 rgba(239, 68, 68, 0.7); }
    70% { box-shadow: 0 0 0 6px rgba(239, 68, 68, 0); }
    100% { box-shadow: 0 0 0 0 rgba(239, 68, 68, 0); }
  }

  /* --- User Profile & Avatar --- */
  .nav-avatar-wrap {
    padding: 2px;
    background: linear-gradient(var(--brand-green), transparent);
    border-radius: 50%;
    display: inline-block;
  }
  
  .nav-avatar {
    width: 36px; height: 36px;
    border-radius: 50%;
    border: 2px solid var(--brand-dark);
    object-fit: cover;
  }

  /* --- Dropdown Styling --- */
  .dropdown-menu {
    background: #1e293b;
    border: 1px solid rgba(255,255,255,0.1);
    box-shadow: 0 20px 40px rgba(0,0,0,0.4);
    border-radius: 16px;
    padding: 8px;
    margin-top: 15px !important;
    overflow: hidden;
  }

  .dropdown-item {
    color: #cbd5e1;
    border-radius: 8px;
    padding: 8px 16px;
    font-size: 0.95rem;
    font-weight: 500;
  }

  .dropdown-item:hover {
    background: var(--brand-green);
    color: #000;
    transform: translateX(4px);
  }

  .dropdown-divider {
    border-color: rgba(255,255,255,0.1);
    margin: 8px 0;
  }

  /* --- Auth Buttons --- */
  .btn-register-nav {
    background: linear-gradient(135deg, var(--brand-green), #10b981) !important;
    color: #000 !important;
    font-weight: 700;
    box-shadow: 0 4px 15px rgba(0, 220, 130, 0.3);
    border: none;
  }
  
  .btn-register-nav:hover {
    box-shadow: 0 6px 20px rgba(0, 220, 130, 0.5);
    transform: translateY(-2px);
  }

  /* Mobile Toggler */
  .navbar-toggler {
    border: none;
    background: rgba(255,255,255,0.1);
    border-radius: 8px;
    padding: 8px;
  }
  .navbar-toggler:focus {
    box-shadow: none;
    background: rgba(255,255,255,0.2);
  }

  @media(max-width: 991px) {
    .navbar-collapse {
      background: #162032;
      padding: 1rem;
      border-radius: 16px;
      margin-top: 15px;
      border: 1px solid rgba(255,255,255,0.05);
      box-shadow: 0 10px 30px rgba(0,0,0,0.3);
    }
    .brand-subtitle { display: none; }
  }
</style>

<nav class="app-navbar navbar navbar-expand-lg navbar-dark">
  <div class="container-fluid navbar-container">

    <a class="navbar-brand" href="/">
      <div class="brand-logo-box">FM</div>
      <div class="brand-text-wrap">
        <span class="brand-title">FreshMart</span>
        <span class="brand-subtitle">Premium Grocery</span>
      </div>
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="mainNav">
      <ul class="navbar-nav ms-auto align-items-center">

        <li class="nav-item me-1">
          <a class="nav-link cart-icon" href="/cart">
            <svg width="22" height="22" stroke="var(--brand-green)" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="9" cy="21" r="1"></circle>
              <circle cx="20" cy="21" r="1"></circle>
              <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
            </svg>
            <span class="d-lg-none ms-2">Cart</span>
            <span class="badge badge-cart ms-1"><%= cartCount || 0 %></span>
          </a>
        </li>

        <% if (user){ %>
        <li class="nav-item dropdown ms-lg-2">
          <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" id="userMenu">
            <span class="nav-avatar-wrap me-2">
              <% 
                const ver = Date.now();
                const rawAvatar = user.profileImage || user.profile_image || user.avatar || user.imagePath || '';
                const avatarFile = rawAvatar.replace(/\\/g, '/').split('/').pop();
                const img = /^https?:\/\//i.test(rawAvatar)
                  ? `${rawAvatar}?v=${ver}`
                  : avatarFile
                    ? `/images/${avatarFile}?v=${ver}`
                    : '/images/default-avatar.png';
              %>
              <img src="<%= img %>" class="nav-avatar">
            </span>
            <span class="d-none d-lg-block text-white fw-bold"><%= user.username || user.email %></span>
          </a>

          <ul class="dropdown-menu dropdown-menu-end">
            <li><a class="dropdown-item" href="/profile">Profile</a></li>
            <li><a class="dropdown-item" href="/orders">My Orders</a></li>
            <li><a class="dropdown-item" href="/orderHistory">Order History</a></li>

            <% if(isAdmin){ %>
            <li><hr class="dropdown-divider"></li>
            <li><span class="dropdown-item-text text-muted" style="font-size:0.75rem; padding-left:16px;">ADMIN</span></li>
            <li><a class="dropdown-item" href="/admin/users">Manage Users</a></li>
            <li><a class="dropdown-item" href="/admin/inventory">Manage Products</a></li>
            <li><a class="dropdown-item" href="/admin/orders">Manage Orders</a></li>
            <% } %>

            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item text-danger" href="/logout">Sign Out</a></li>
          </ul>
        </li>
        <% } else { %>
          <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
          <li class="nav-item ms-lg-2">
            <a class="nav-link btn-register-nav px-4 text-dark" href="/register">Register</a>
          </li>
        <% } %>

      </ul>
    </div>
  </div>
</nav>

<script>
document.addEventListener("DOMContentLoaded", () => {
  const nav = document.querySelector(".app-navbar");
  if (nav) document.body.style.paddingTop = nav.offsetHeight + "px";
});
</script>


<div class="container" style="margin-top: 20px; position: relative; z-index: 1025;">
  
  <% if(typeof success_msg !== 'undefined' && success_msg != ''){ %>
    <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm" role="alert" 
         style="background: #d1fae5; color: #065f46; border-left: 4px solid #10b981;">
      <strong>Success!</strong> <%= success_msg %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>

  <% if(typeof error_msg !== 'undefined' && error_msg != ''){ %>
    <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm" role="alert"
         style="background: #fee2e2; color: #991b1b; border-left: 4px solid #ef4444;">
      <strong>Error:</strong> <%= error_msg %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>

  <% if(typeof error !== 'undefined' && error != ''){ %>
    <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm" role="alert"
         style="background: #fee2e2; color: #991b1b; border-left: 4px solid #ef4444;">
      <%= error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
</div>

<!-- flash messages (displayed site-wide) -->
<% if (typeof messages !== 'undefined' && messages) { %>
  <% Object.keys(messages).forEach(function(type){ (messages[type]||[]).forEach(function(msg){ %>
    <div class="container mt-3">
      <div class="alert alert-<%= (type === 'error' ? 'danger' : type) %> alert-dismissible fade show" role="alert">
        <%= msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    </div>
  <% }) }) %>
<% } %>